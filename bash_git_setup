# source git autocompletions to make __git_ps1 work
source /usr/share/git/completion/git-prompt.sh
# improve the bash prompt to include the branchname
PS1="\[\033[01;32m\]\u\[\033[00m\] \[\033[01;34m\]\w \[\033[0;31m\]\$(__git_ps1 '(%s)') \[\033[01;34m\]\$\[\033[00m\] "
# git output settings
GIT_PS1_SHOWDIRTYSTATE=1
GIT_PS1_DESCRIBE_STYLE="branch"
GIT_PS1_SHOWUPSTREAM="verbose"

